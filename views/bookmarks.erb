<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href=<%= bookmark.url %>><%= bookmark.title %></a>
      <form action="/bookmarks/delete/<%= bookmark.id %>" method="post">
        <input type="submit" id="delete_<%= bookmark.id %>" value="Delete">
      </form>
      <form action="/bookmarks/edit/<%= bookmark.id %>" method="post">
        <input type="submit" id="edit_<%= bookmark.id %>" value="Edit">
      </form>
      <%# <form action="/bookmarks/comment" method="post">
        <label>
          Comment
          <input type="text" name="comment_text" value="Test comment">
          <input type="submit" value="Comment">
        </label>
      </form> %>
    </li>
  <% end %>
</ul>
